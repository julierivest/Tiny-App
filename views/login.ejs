<header>
  <h1>Log In:</h1>
    <% if (!user) { %>
      <form action="/login" method="POST">
        <input type="email" name="email" style="width: 300px" placeholder="Email">
        <input type="password" name="password" placeholder="Password" style="width: 300px">
        <input type="submit" value="Sign In">
      </form>
    <% } else { %>
      <form action="/logout" method="POST">
        <span> <%=user.email%> </span>
        <input type="submit" value="Logout">
      </form>
    <% } %>
    <a href="/register">Need to register?</a>
    <a href="/urls">Return to homepage</a>
</header>


